<div class="auth-wrap">
  <div class="header clearfix">
    <div class="logo">
      <%= image_tag 'header-logo.png' %>
    </div>

    <div class="account">
      <%= link_to ext_signin_path(return_to: params[:return_to]) do %>
        <%= image_tag("sign_weibo.png") %>
      <% end %>
      <%= link_to auth_signup_path(return_to: session[:return_to]) do %>
        <span class="signup">注册</span>
      <% end %>
    </div>
  </div>

  <div class="auth-content">
    <% if flash[:warning] %>
      <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <h4 style="font-weight: 800;">警告!</h4>
        <p style="font-weight: 800;"><%= flash[:warning] %></p>
      </div>
    <% end %>

    <div class="sign-form">
      <div class="auth-info">同样可以使用 iqunix 社区账号进行访问</div>

      <%= form_tag auth_signin_path do %>
        <div class="form-group">
          <%= label_tag '账号' %>
          <%= text_field_tag :login, params[:login], placeholder: '用户名或密码', tabindex: 1, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag '密码' %>
          <%= password_field_tag :password, nil, placeholder: '密码', tabindex: 2, class: 'form-control' %>
        </div>
        <%= submit_tag '登录', class: 'btn btn-success', tabindex: 5 %>
      <% end %>
    </div>
  </div>
</div>
